# Production Environment Variables
# FB_APU01 - Sistema de Reforma Tributária
# VERSÃO: 5.0.9

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
PORT=8081
ENVIRONMENT=production
LOG_LEVEL=info
JWT_SECRET=super-secure-jwt-secret-for-production-change-me-2026

# ========================================
# BANCO DE DADOS
# ========================================
DB_USER=fb_apu01_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2026
DB_NAME=fiscal_db
DB_HOST=fb_apu01-db-prod
DB_PORT=5432
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=require

# ========================================
# REDIS
# ========================================
REDIS_HOST=fb_apu01-redis-prod
REDIS_PORT=6379
REDIS_ADDR=${REDIS_HOST}:${REDIS_PORT}

# ========================================
# BACKUP AUTOMÁTICO
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
BACKUP_STORAGE=/opt/fb_apu01/backups

# ========================================
# MONITORAMENTO
# ========================================
GRAFANA_PASSWORD=secure_grafana_password_2026
PROMETHEUS_RETENTION=200h
HEALTH_CHECK_INTERVAL=30s
METRICS_ENABLED=true

# ========================================
# SEGURANÇA
# ========================================
CORS_ORIGINS=https://fbtax.cloud,https://www.fbtax.cloud
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SESSION_TIMEOUT=24h
AUDIT_LOGS=true

# ========================================
# DEPLOY
# ========================================
SLACK_WEBHOOK=your_slack_webhook_url_here
DEPLOY_NOTIFICATIONS=true
ROLLBACK_ENABLED=true
HEALTH_CHECK_TIMEOUT=300s

# ========================================
# DESENVOLVIMENTO (COMENTAR EM PRODUÇÃO)
# ========================================
# DEBUG=false
# VERBOSE_LOGS=false
# HOT_RELOAD=false