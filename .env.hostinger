# Production Environment Variables
# FB_APU01 - Sistema de Reforma Tributária
# Deploy: GitHub → Coolify → Hostinger
# VERSÃO: 5.0.9

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
PORT=8081
ENVIRONMENT=production
LOG_LEVEL=info
JWT_SECRET=super-secure-jwt-secret-for-production-change-me-2026

# ========================================
# BANCO DE DADOS (HOSTINGER POSTGRES)
# ========================================
DB_HOST=postgres_hostinger_url
DB_PORT=5432
DB_USER=fb_apu01_prod_user
DB_PASSWORD=CHANGE_ME_HOSTINGER_DB_PASSWORD
DB_NAME=fiscal_db_prod
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=require

# ========================================
# REDIS (HOSTINGER)
# ========================================
REDIS_HOST=redis_hostinger_url
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_HOSTINGER_REDIS_PASSWORD
REDIS_ADDR=${REDIS_HOST}:${REDIS_PORT}

# ========================================
# COOLIFY CONFIGURAÇÕES
# ========================================
COOLIFY_APP_ID=your_coolify_app_id
COOLIFY_WEBHOOK_SECRET=your_webhook_secret
DEPLOY_NOTIFICATIONS=true

# ========================================
# BACKUP AUTOMÁTICO (HOSTINGER)
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
BACKUP_STORAGE=/app/backups

# ========================================
# SEGURANÇA
# ========================================
CORS_ORIGINS=https://fbtax.cloud,https://www.fbtax.cloud
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SESSION_TIMEOUT=24h
AUDIT_LOGS=true

# ========================================
# MONITORAMENTO (COLLIFY INTEGRADO)
# ========================================
HEALTH_CHECK_INTERVAL=30s
METRICS_ENABLED=true
COOLIFY_HEALTH_CHECK=true

# ========================================
# HOSTINGER ESPECÍFICO
# ========================================
HOSTINGER_DEPLOY=true
STATIC_FILES_PATH=/app/static
UPLOAD_PATH=/app/uploads

# ========================================
# DESENVOLVIMENTO (COMENTAR EM PRODUÇÃO)
# ========================================
# DEBUG=false
# VERBOSE_LOGS=false
# HOT_RELOAD=false